utils_for_lab() {
	lcd() {
		export MYZS_PREVIOUS_DIRNAME="$PWD" &&
			to_work_location "$MYZS_LAB_DIRNAME"
	}

	lmk() {
		local dir="$1"
		wcd &&
			mkdir -p "$dir" &&
			cd "$dir" || return 1
	}

	lcf() {
		local file="$1"
		wcd &&
			touch "$file" &&
			"$VISUAL" "$file" || return 1
	}

	lrm() {
		local in="$1"
		wcd &&
			rm -r "$in"
	}

	lhelp() {
		echo "
Variable name: MYZS_LAB_DIRNAME
Folder: $(get_work_location "$MYZS_LAB_DIRNAME")
Show help of lab utils
    1. wcd - cd to LAB
    2. wmk - create dir to LAB
    3. wcf - create file to LAB
    4. wrm - remove file/folder in LAB
Extra command
    1. back  - cd back to previous directory
        "
	}

	lh() {
		lhelp
	}

	if_fully_debug_print "alias" "lcd => cd to $(get_work_location "$MYZS_LAB_DIRNAME")"
	if_fully_debug_print "alias" "lmk => create dir to $(get_work_location "$MYZS_LAB_DIRNAME")"
	if_fully_debug_print "alias" "lcf => create file to $(get_work_location "$MYZS_LAB_DIRNAME")"
	if_fully_debug_print "alias" "lrm => remove file/folder in $(get_work_location "$MYZS_LAB_DIRNAME")"
	if_fully_debug_print "alias" "lh => show help command"
}

test -n "$MYZS_LAB_DIRNAME" && utils_for_lab
