utils_for_lab() {
	lname() {
		rname "$MYZS_LAB_DIRNAME"
	}

	llo() {
		rlo "$MYZS_LAB_DIRNAME"
	}

	lcd() {
		rcd "$MYZS_LAB_DIRNAME" "$1"
	}

	lmk() {
		rmk "$MYZS_LAB_DIRNAME" "$1"
	}

	lcf() {
		rcf "$MYZS_LAB_DIRNAME" "$1"
	}

	lrm() {
		rrm "$MYZS_LAB_DIRNAME" "$1"
	}

	lls() {
		rls "$MYZS_LAB_DIRNAME"
	}

	lla() {
		rla "$MYZS_LAB_DIRNAME"
	}

	lh() {
		echo "
Variable name: MYZS_LAB_DIRNAME
Folder: $(_myzs_get_work_location "$MYZS_LAB_DIRNAME")
Concept: Lab for testing and playground new language or framework"
	}

	_myzs_print_debug_tofile "lab" "alias" "lname => get '$MYZS_LAB_DIRNAME'"
	_myzs_print_debug_tofile "lab" "alias" "llo => get '$(_myzs_get_work_location "$MYZS_LAB_DIRNAME")'"
	_myzs_print_debug_tofile "lab" "alias" "lcd => cd to $(_myzs_get_work_location "$MYZS_LAB_DIRNAME")"
	_myzs_print_debug_tofile "lab" "alias" "lmk => create dir to $(_myzs_get_work_location "$MYZS_LAB_DIRNAME")"
	_myzs_print_debug_tofile "lab" "alias" "lcf => create file to $(_myzs_get_work_location "$MYZS_LAB_DIRNAME")"
	_myzs_print_debug_tofile "lab" "alias" "lrm => remove file/folder in $(_myzs_get_work_location "$MYZS_LAB_DIRNAME")"
	_myzs_print_debug_tofile "lab" "alias" "lls => list file/folder in $(_myzs_get_work_location "$MYZS_LAB_DIRNAME")"
	_myzs_print_debug_tofile "lab" "alias" "lla => list all file/folder in $(_myzs_get_work_location "$MYZS_LAB_DIRNAME")"
	_myzs_print_debug_tofile "lab" "alias" "lh => show help command"
}

test -n "$MYZS_LAB_DIRNAME" &&
	utils_for_lab ||
	_myzs_print_warning_tofile "lab" "-" "disable lab location"
